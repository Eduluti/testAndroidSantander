<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:focusable="true"
        android:clickable="true"
        android:focusableInTouchMode="true"
        tools:context=".LoginActivity">

    <com.nschirmer.widgets.Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:title="Login"
            app:color="@color/blue"
            app:text_color="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/login_bottom_button_margin"/>

    <com.nschirmer.widgets.InputText
            android:id="@+id/login_input_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:color="@color/gray_light"
            app:error_color="@color/orange"
            app:type="password"
            app:hint="@string/login_input_password_label"
            app:layout_constraintBottom_toTopOf="@+id/login_button"
            app:layout_constraintTop_toBottomOf="@+id/login_input_user"
            app:layout_constraintVertical_bias="0.0"/>


    <com.nschirmer.widgets.InputText
            android:id="@+id/login_input_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:color="@color/gray_light"
            app:error_color="@color/orange"
            app:type="email"
            app:hint="@string/login_input_email_label"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            android:layout_marginTop="@dimen/login_input_email_top_margin"/>


    <View android:visibility="gone"
          android:id="@+id/login_background_transition"
          android:background="@color/blue"
          android:layout_width="match_parent"
          android:layout_height="match_parent"/>


    <ImageView android:visibility="gone"
               android:focusable="true"
               android:clickable="true"
               android:focusableInTouchMode="true"
               android:id="@+id/login_logo"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:srcCompat="@drawable/bank_logo"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="@dimen/login_logo_top_margin"/>

    <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3"/>


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- common -->
    <attr name="title" format="string"/>
    <attr name="description" format="string"/>
    <attr name="text_color" format="color"/>
    <attr name="color" format="color"/>
    <attr name="is_clickable" format="boolean"/>


    <!-- custom shadow -->
    <attr name="has_shadow" format="boolean"/>
    <attr name="shadow_distance" format="dimension"/>
    <attr name="shadow_angle" format="float"/>
    <attr name="shadow_radius" format="dimension"/>
    <attr name="shadow_color" format="color"/>


    <!-- custom shadow view -->
    <declare-styleable name="OutlineShadowView">
        <attr name="has_shadow"/>
        <attr name="shadow_distance"/>
        <attr name="shadow_angle"/>
        <attr name="shadow_radius"/>
        <attr name="shadow_color"/>
    </declare-styleable>


    <!-- custom button view -->
    <declare-styleable name="Button">
        <attr name="title"/>
        <attr name="description"/>
        <attr name="text_color"/>
        <attr name="color"/>
    </declare-styleable>


    <!-- INPUT TEXT -->
    <declare-styleable name="InputText">
        <attr name="text"/>
        <attr name="hint" format="string"/>
        <attr name="maxLength" format="integer"/>
        <attr name="description"/>
        <attr name="color"/>
        <attr name="border_color" format="color"/>
        <attr name="hint_color" format="color"/>
        <attr name="pass_toggle_color" format="color"/>
        <attr name="error_color" format="color"/>
        <attr name="type" format="enum">
            <enum name="text" value="0"/>
            <enum name="password" value="1"/>
            <enum name="numbers" value="2"/>'
            <enum name="email" value="3"/>
        </attr>
    </declare-styleable>



</resources>